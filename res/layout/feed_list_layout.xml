<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:background="@drawable/rounded_corner_feed_list" >
    
    <ImageView
        android:id="@+id/image_feed_like"
        android:layout_width="48dp"
       	android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_rating_good_gray"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/image_feed"
        android:layout_width="64dp"
       	android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textview_feedname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_feed"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:textColor="#0F100A"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/textview_feedrestname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_feedname"
        android:layout_toRightOf="@+id/image_feed"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#0F100A"
        android:textSize="14sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/textview_feedtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_feedname"
        android:layout_toRightOf="@+id/textview_feedrestname"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#909090"
        android:textSize="14sp" />
    
    <View 
        android:id="@+id/feed_seperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/image_feed"
        android:background="#CCCCCC"
        />

    <TextView
        android:id="@+id/textview_feeddetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_seperator"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:textColor="#0F100A"
        android:textSize="16sp" />

</RelativeLayout>