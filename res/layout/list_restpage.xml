<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/textview_restlistdeal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_restlistdeal"
        android:background="#E0E0E0"
        android:orientation="horizontal"
        android:weightSum="2.01" >

        <Button
            android:id="@+id/button_restpage_share"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="@string/share" />
        
        <View
             android:layout_width="0dp"
             android:layout_height="20dp"
             android:layout_marginTop="5dp"
             android:layout_weight="0.01"
             android:background="#000000"
            />

        <Button
            android:id="@+id/button_restpage_avail"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="@string/title_avail" />
    </LinearLayout>

</RelativeLayout>